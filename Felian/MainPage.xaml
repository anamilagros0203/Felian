<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Felian.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Frame BackgroundColor="#63A687" Padding="24" CornerRadius="40" Margin="10,30,10,20">
            <Label Text="Felian" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry Text="{Binding FirstName}"  Placeholder="Escribe tu nombre"/>
        <Entry Text="{Binding Email}" Placeholder="Escribe tu email"/>
        <Entry Text="{Binding Password}" Placeholder="Escribe tu contraseña"/>
        <Entry Text="{Binding Address}" Placeholder="Escribe tu direccion"/>

        <Button Text="Registrar" Command="{Binding SaveUsersCommand}" BackgroundColor="#63A687" />
        <ListView ItemsSource="{Binding UserList}"
                  ItemTapped="ListView_OnItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding FirstName}"/>
                            <Label Text="{Binding Email}"/>
                            <Label Text="{Binding Password}" />
                            <Label Text="{Binding Address}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--Boton volver-->
        <Button Text="Volver"
                    FontSize="Medium"
                    BackgroundColor="#63A687"/>
        <Button Text="entrar"
                    FontSize="Medium"
                    BackgroundColor="#63A687"/>
    </StackLayout>

</ContentPage>
