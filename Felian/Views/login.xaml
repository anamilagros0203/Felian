<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Felian.Views.login"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Image Margin="20,190,20,30" Source="Nombre"/>
            <Entry Margin="20,10,20,10" Text="{Binding Email}" Placeholder="Escribe tu email" TextColor="Black" Background="#63A687"/>
            <Entry Margin="20,10,20,10" Text="{Binding Password}" Placeholder="Escribe tu contraseña" TextColor="Black" Background="#63A687"/>

            <!--Boton entrar-->
            <Button Text="Entrar"
                    FontSize="Medium"
                    BackgroundColor="Black"
                Clicked="Next_Clicked"
                    Margin="20,10,20,10"/>
            
            <!--Boton registrarse-->
            <Button Text="Registrarme"
                    FontSize="Medium"
                    BackgroundColor="Black"
                Clicked="Button_Clicked"
                    Margin="20,10,20,10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>